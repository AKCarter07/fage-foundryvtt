
<section>
    <div class="stats-display">
        {{log data.data.abilities}}

        {{#each data.data.abilities as |stat id|}}
        
            <div class="stat {{#if stat.primary}}primary-stat{{/if}}">
                
                <label class="stat-name">
                    {{localize (val id)}}
                </label>
                
                <div class="stat-value">
                    <input type="text" name="data.abilities.{{id}}.value" value="{{stat.value}}" data-dtype="Number" />
                    {{log id stat.value}}
                    
                </div>
                 <div class="focuses">
                    {{#each data.data.attributes.focuses as |focus id|}}
                    {{/each}}

                </div>
                
            </div>
        {{/each}}

        
    </div>
</section>
