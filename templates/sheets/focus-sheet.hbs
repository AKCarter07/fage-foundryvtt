
<form class="{{cssClass}}" autocomplete="off">
    <div class="item focus-sheet">
        <header class="sheet-header">
            <img src="{{item.img}}" data-edit="img" title="{{item.name}}" height="auto" width="auto"/>
            <h1><input name="name" type="text" value="{{item.name}}" placeholder="{{ localize 'Name' }}"/></h1>
        </header>
        <div class="focus-body">
            <div class="side"></div>
            <div class="body">
                <select class="col1" name="data.stat">
                    {{#select data.data.stat}}
                    {{#each config.stats as |name type|}}
                    <option value="{{type}}">{{localize name}}</option>
                    {{/each}}
                    {{/select}} 
                </select>
                <span class="col3">
                    <input name="data.improved" type="checkbox" {{checked data.data.improved}} /> Improved
                </spanv>
                
            </div>
        </div>
    </div>
</form>
