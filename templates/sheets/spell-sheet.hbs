<form class="{{cssClass}}" autocomplete="off">
    <div class="item spell-sheet" data-item-id="{{item.data._id}}">
        
        <header class="sheet-header">
            <img src="{{item.img}}" data-edit="img" title="{{item.name}}" height="auto" width="auto"/>
            <h1><input name="name" type="text" value="{{item.name}}" placeholder="{{ localize 'Name' }}"/></h1>
        </header>
        
        <div class="sheet-content">
            
            <div class="descrip">
                Description
                {{editor content=data.data.description target="data.description" button=true owner=owner editable=true}}
            </div>
        </div>
            
    </div>
</form>